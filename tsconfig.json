{
  "compilerOptions": {
    "jsx": "react",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": ["es2015", "es2016", "dom"]
  },
  "include": ["./src/**/**/*"],
  "exclude": ["node_modules"]
}
